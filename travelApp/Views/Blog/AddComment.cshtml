
<div class="content-form">
    <h3>Yorum yap</h3>
    <form method="post">
        <input type="text" placeholder="ID" name="BlogId" value="@ViewBag.value" readonly="readonly" required />
        <input type="text" placeholder="Kullanıcı Adı" name="UserName" required/>
