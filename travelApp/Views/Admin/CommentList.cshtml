@using travelApp.Models.Classes
@model List<Comment>
@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorumlar</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>KULLANICI ADI</th>
        <th>MAİL</th>
        <th>YORUM</th>
        <th>BLOG</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.UserName</td>
            <td>@x.Mail</td>
            <td>@x.Content</td>
            <td>@x.Blog.Title</td>
            <th><a href="/Admin/DeleteComment/@x.ID/" class="btn btn-danger">Sil</a></th>
            <th><a href="/Admin/BringComment/@x.ID/" class="btn btn-warning">Güncelle</a></th>
        </tr>
    }
    
</table>

